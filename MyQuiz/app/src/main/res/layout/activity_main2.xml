<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="drawable.myquiz.MainActivity2">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Enter your name"
        android:inputType="text"
        android:textSize="40sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/category"
        android:textColor="#EACE1B"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="40dp"
        android:text="Select the category"
        android:textSize="35sp"
        />


    <Button
        android:id="@+id/history"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="35dp"
        android:backgroundTint="#2B9E23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/category"
        />
    <Button
        android:id="@+id/politics"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Politics"
        android:textSize="35dp"
        android:backgroundTint="#2B9E23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/history"
        />
    <Button
        android:id="@+id/geography"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Geography"
        android:textSize="35dp"
        android:backgroundTint="#2B9E23"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/politics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/sports"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:textSize="35dp"
        android:backgroundTint="#2B9E23"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/geography"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
